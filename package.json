{
  "name": "@BitBouncers/bit",
  "version": "0.0.2",
  "description": "",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate:mysql",
    "db:introspect": "drizzle-kit introspect:mysql",
    "dev": "cross-env NODE_ENV=development npx tsx watch src",
    "lint-eslint": "eslint . --config .eslintrc.json",
    "prettier-check": "prettier --check 'src/**/*.ts' 'test/**/*.ts' 'drizzle/**/*.ts'",
    "prettier-fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' 'drizzle/**/*.ts'",
    "start": "cross-env NODE_ENV=production tsx dist/src",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "engines": {
    "node": ">=16.13"
  },
  "jest": {
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {}
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/middie": "^8.3.0",
    "@planetscale/database": "^1.14.0",
    "@prisma/client": "^5.8.1",
    "drizzle-orm": "^0.29.3",
    "express-validator": "^7.0.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "firebase": "^10.7.2",
    "stripe": "^14.14.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@jest/globals": "^29.7.0",
    "@types/connect": "^3.4.38",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.56.0",
    "firebase-admin": "^12.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
