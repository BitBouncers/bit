{
  "name": "@BitBouncers/bit",
  "version": "0.0.3",
  "description": "",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "db:generate": "npx prisma generate",
    "db:introspect": "npx prisma db pull",
    "dev": "cross-env NODE_ENV=development npx tsx watch src",
    "lint-eslint": "eslint .",
    "prettier-check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "prettier-fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "start": "cross-env NODE_ENV=production tsx dist/src",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --silent"
  },
  "engines": {
    "node": ">=16.13"
  },
  "jest": {
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "preset": "ts-jest",
    "maxWorkers": "75%",
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["dist", "node_modules"],
    "transform": {}
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/middie": "^8.3.1",
    "@fastify/postgres": "^5.2.2",
    "@prisma/client": "^5.15.0",
    "ajv": "^8.16.0",
    "ajv-keywords": "^5.1.0",
    "express-validator": "^7.1.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "firebase": "^10.12.2",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "stripe": "^15.10.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@jest/globals": "^29.7.0",
    "@types/connect": "^3.4.38",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.30",
    "@typescript-eslint/parser": "^8.0.0-alpha.30",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "eslint": "^9.4.0",
    "firebase-admin": "^12.1.1",
    "globals": "^15.4.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.15.0",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.30"
  }
}
